<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete a event</title>
    <link rel="stylesheet" href="/static/css/deleteFaculty.css" />
  </head>

  <body>
    <div class="form-add-new">
      <form action="/event/delete-event" method="POST">
        <fieldset>
          <legend>Delete A Event</legend>
          <div class="input-group d-none" hidden>
            <label>Id: </label>
            <input type="text" name="id" value="<%= eventEdit.id %>" />
          </div>
          <div class="input-group">
            <label>Are you sure to delete this user with Event Name: </label>
            <input
              type="text"
              name="event_name"
              value="<%= eventEdit.event_name %>"
            />
          </div>
          <div>
            <button>Confirm</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
